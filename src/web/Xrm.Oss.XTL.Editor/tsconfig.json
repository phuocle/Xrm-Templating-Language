{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": false,
        "noImplicitAny": true,
        "module": "ES6",
        "moduleResolution": "node",
        "allowJs": true,
        "baseUrl": ".",
        "target": "es6",
        "jsx": "react",
        "keyofStringsOnly": true,
        "paths": {
            "*": [
                "./node_modules/*",
                "./types/*"
            ]
        }
    },
    "include": [
        "./components/**/*"
    ]
}
